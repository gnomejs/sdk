{
    "name": "@gnome/secrets",
    "version": "0.0.0",
    "exports": {
        ".": "./mod.ts",
        "./generator": "./generator.ts",
        "./masker": "./masker.ts",
        "./json-vault": "./json-vault.ts",
        "./memory-vault": "./memory-vault.ts",
        "./vault-utils": "./vault-utils.ts"
    },
    "compilerOptions": {
        "lib": ["deno.ns", "deno.unstable", "dom"]
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "lineWidth": 120,
        "exclude": ["**/*.md"]
    },
    "tasks": {
        "test": "deno test -A",
        "coverage": "deno test --coverage=.artifacts/code-coverage -A",
        "lcov": "deno coverage .artifacts/code-coverage --lcov > .artifacts/code-coverage.lcov"
    },

    "publish": {
        "include": [
            "mod.ts",
            "generator.ts",
            "masker.ts",
            "vault-utils.ts",
            "json-vault.ts",
            "memory-vault.ts",
            "README.md",
            "LICENSE.md",
            "deno.json"
        ]
    }
}

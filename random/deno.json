{
    "name": "@gnome/random",
    "version": "0.0.0",
    "exports": "./mod.ts",
    "compilerOptions": {
        "lib": ["deno.ns", "deno.unstable", "dom"]
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "lineWidth": 120
    },
    "tasks": {
        "test": "deno test -A",
        "coverage": "deno test --coverage=.artifacts/code-coverage -A",
        "lcov": "deno coverage .artifacts/code-coverage --lcov > .artifacts/code-coverage.lcov"
    },

    "publish": {
        "include": [
            "mod.ts",
            "README.md",
            "LICENSE.md",
            "deno.json"
        ]
    }
}
